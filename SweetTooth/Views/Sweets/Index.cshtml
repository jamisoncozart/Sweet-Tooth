@{
  Layout = "_Layout";
}

@using SweetTooth.Models;
@model List<SweetTooth.Models.Sweet>;

<h1>Sweets</h1>

@if (@Model.Count == 0)
{
  <h3>No Sweets have been added yet!</h3>
} 

@foreach (Sweet sweet in Model)
{
  <li>@Html.ActionLink($"{sweet.Name}", "Details", new { id = sweet.SweetId }, new {@class = "content"})</li>
}

<p>@Html.ActionLink("Add new sweet", "Create", "Sweets", null, new { @class = "btn btn-dark brn-large"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null,  new { @class = "btn btn-dark btn-large" } )</p>